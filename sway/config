### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Terminal emulator
set $term foot
# Application launcher
set $menu wofi | xargs swaymsg exec

include ~/.config/sway/conf.d/common/*
include ~/.config/sway/conf.d/laptop/*

#
# Status Bar:
#
bar {
    swaybar_command waybar
}
